<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ringtone_pref_dlg_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <RadioButton
        android:id="@+id/ringtone_pref_dlg_item_radiobtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:focusable="false"
        android:text="@string/empty_string" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/ringtone_pref_dlg_item_radiobtn"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ringtone_pref_dlg_item_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_string"
            android:textSize="17sp"
            android:ellipsize="end"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/ringtone_pref_dlg_item_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_string"
            android:textSize="15sp"
            android:textStyle="italic"/>

    </LinearLayout>

</RelativeLayout>
