<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile_pref_dlg_item_root"
    android:layout_width="match_parent"
    android:layout_height="48dp" >

    <RadioButton
        android:id="@+id/profile_pref_dlg_item_radiobtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:checked="false"
        android:focusable="false"
        android:text="@string/empty_string" />

    <ImageView
        android:id="@+id/profile_pref_dlg_item_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="3dp"
        android:layout_toEndOf="@id/profile_pref_dlg_item_radiobtn"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_profile_default"
        android:contentDescription="@string/profile_preferences_profileIcon"/>

    <LinearLayout
        android:id="@+id/profile_pref_dlg_item_liLa1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/profile_pref_dlg_item_icon"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/profile_pref_dlg_item_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="@string/profile_name_default"
            android:textSize="15sp"
            android:ellipsize="end"
            android:maxLines="1"/>

        <ImageView
            android:id="@+id/profile_pref_dlg_item_indicator"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_marginTop="2dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/empty_string"
            android:scaleType="@integer/profilePrefIndicatorScaleType"
            android:src="@drawable/ic_profile_pref_volume_on" />

    </LinearLayout>

</RelativeLayout>
