<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calendars_multiselect_pref_dlg_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/alert_dialog_top_padding">

    <LinearLayout 
        android:id="@+id/calendars_multiselect_pref_dlg_linla_progress"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >
        
        <ProgressBar
            android:id="@+id/calendars_multiselect_pref_dlg_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/calendars_multiselect_pref_dlg_rella_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" >

        <LinearLayout
            android:id="@+id/calendars_multiselect_pref_dlg_et_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical" >

            <View
                android:id="@+id/calendars_multiselect_pref_dlg_buttonBarDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="?attr/dialogDivider" />

            <Button
                android:id="@+id/calendars_multiselect_pref_dlg_unselect_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/pref_dlg_change_selection_button_unselect_all"
                android:minHeight="40dp"
                android:textColor="@color/action_button_text_color"
                android:background="?attr/buttonBackground"
                style="?android:attr/borderlessButtonStyle" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/calendars_pref_dlg_linla_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_above="@id/calendars_multiselect_pref_dlg_et_btn"
            android:layout_alignParentTop="true" >

            <View
                android:id="@+id/calendars_pref_dlg_titleBarDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="?attr/dialogDivider" />

            <ListView
                android:id="@+id/calendars_multiselect_pref_dlg_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                android:clipToPadding="false"
                android:scrollbarStyle="outsideOverlay"
                android:divider="@android:color/transparent" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
