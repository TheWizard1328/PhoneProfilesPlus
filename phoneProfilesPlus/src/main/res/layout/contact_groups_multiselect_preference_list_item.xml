<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contact_groups_multiselect_pref_dlg_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="3dp"
    android:paddingEnd="3dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp" >

    <CheckBox
        android:id="@+id/contact_groups_multiselect_pref_dlg_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:checked="false"
        android:focusable="false"
        android:text="@string/empty_string" />

    <LinearLayout
        android:id="@+id/contact_groups_multiselect_pref_dlg_item_liLa1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/contact_groups_multiselect_pref_dlg_item_checkbox" >

        <TextView
            android:id="@+id/contact_groups_multiselect_pref_dlg_item_display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_string"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/contact_groups_multiselect_pref_dlg_item_account_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_string"
            android:textSize="13sp"
            android:textStyle="italic"/>

    </LinearLayout>


</RelativeLayout>
