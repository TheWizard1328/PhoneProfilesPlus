<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/connect_to_ssid_pref_dlg_item_root"
    android:layout_width="match_parent"
    android:layout_height="48dp" >

    <RadioButton
        android:id="@+id/connect_to_ssid_pref_dlg_item_radiobutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:checked="false"
        android:focusable="false"
        android:text="@string/empty_string" />

    <TextView
        android:id="@+id/connect_to_ssid_pref_dlg_item_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/connect_to_ssid_pref_dlg_item_radiobutton"
        android:layout_centerVertical="true"
        android:layout_marginStart="3dp"
        android:text="@string/empty_string"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
